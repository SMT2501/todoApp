<%- include("partials/header.ejs") %>

<body>

<section class="pb-4">
    <div>
      
      <section class="w-100 py-3 px-4 gradient-custom" style="border-radius: .5rem .5rem 0 0;">
        <style>
          .gradient-custom {
            background: radial-gradient(50% 123.47% at 50% 50%, #00ff94 0%, #720059 100%),
              linear-gradient(121.28deg, #669600 0%, #ff0000 100%),
              linear-gradient(360deg, #0029ff 0%, #8fff00 100%),
              radial-gradient(100% 164.72% at 100% 100%, #6100ff 0%, #00ff57 100%),
              radial-gradient(100% 148.07% at 0% 0%, #fff500 0%, #51d500 100%);
            background-blend-mode: screen, color-dodge, overlay, difference, normal;
          }
        </style>
        <div class="row d-flex justify-content-center py-5">
            <h2>Personal List</h2>
          <div class="col col-xl-10">
  
            <div class="card">
              <div class="card-body p-5">
  
                <form class="d-flex justify-content-center align-items-center mb-4" action="/submit" method="POST">
                  <div class="form-outline flex-fill">
                    <input type="text" id="form1" class="form-control" name="todoTask">
                    <label class="form-label" for="form2" style="margin-left: 0px;">New task...</label>
                        <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 71.2px;">
                        </div>
                        <div class="form-notch-trailing"></div>
                    </div>
                 </div>
                  <button type="submit" class="btn btn-info ms-2">Add</button>
                </form>
  
                <!-- Tabs navs -->
                <ul class="nav nav-tabs mb-4 pb-2" id="ex1" role="tablist">
                  <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="ex1-tab-1" data-mdb-toggle="tab" href="#ex1-tabs-1" role="tab" aria-controls="ex1-tabs-1" aria-selected="true">Task</a>
                  </li>

                </ul>
                <!-- Tabs navs -->
  
                <!-- Tabs content -->
                <div class="tab-content" id="ex1-content">
                    <% data.forEach((element) => { %> 
                    <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel" aria-labelledby="ex1-tab-1">
                        <ul class="list-group mb-0"> 
                          <li class="list-group-item d-flex align-items-center border-0 mb-2 rounded" style="background-color: #f4f6f7;">                              
                            <%= element.todoTask %>
                          </li>
                        </ul>
                    </div>
                    <% })  %>
                </div>
                <!-- Tabs content -->
  
              </div>
            </div>
  
          </div>
        </div>

        <%- include("partials/footer.ejs") %>

      </section>
      
      
    </div>
  </section>

    
</body>
